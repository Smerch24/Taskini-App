<h1>New Task</h1>
<%= form_with model: @task, local: true do |f| %>
  <div>
    <%= f.label :name, class: "field-text"%>
    <%= f.text_field :name, class: "field" %>
  </div>
  <%= f.label :table_id, "Select Table", class: "field-text" %><br>
  <%= f.select :table_id, options_from_collection_for_select(@columns, :id, :name, @task.column_id), {}, { class: "select-field" } %>
  <div>
    <%= f.submit "Create", class: "link create-link"%>
    <h3><%= link_to "Back", tasks_path %></h3>
  </div>
<% end %>
